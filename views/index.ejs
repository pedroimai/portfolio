    <!-- profile begins -->
    <section id="page-profile" class="page-profile">

        <div class="container">
            <header class="section-header">
                <h2 class="section-title">Personal Profile</h2>
                <div class="spacer"></div>
                <p class="section-subtitle">{{user.profile.subtext}}</p>
            </header>
            <div class="row">
                <div class="col-md-3">
                    <div class="profile"><img src="img/profile.png" alt="profile" />
                    </div>
                </div>
                <div class="col-md-9">
                    {{user.profile.text}}
                </div>
            </div>
        </div>
    </section>
    <!-- profile ends -->
    <!-- skills begins -->
    <section id="page-skills" class="page-skills">
        <div class="container">
            <header class="section-header">
                <h2 class="section-title"><span>Skills</span></h2>
                <div class="spacer"></div>
                <p class="section-subtitle">{{user.skill.subtext}}</p>
            </header>
                <div id="grid-controls-wrapper text-center waypoint-activator">
                    <ul class="nav nav-pills center-pills grid-controls">
                        <li class="active filter"><a href="javascript:void(0)" data-filter="*">All</a></li>
                        <li ng-repeat="category in user.skills.categories" class="filter"><a href="javascript:void(0)" data-filter="{{category.filter}}">{{category.name}}</a></li>
                    </ul>
                </div>

            <div class="row" >
                <div class="grid-wrapper-skill text-center">
                    <div class="col-md-2 col-sm-4 mix {{skill.category}}"  ng-repeat="skill in user.skills.list">
                        <span class="chart" data-percent="{{skill.percent}}">
                        <span class="percent"></span>
                        <h4>{{skill.name}}</h4>     
                        </span>
                    </div>
                </div>
           </div>
    </section>
    <!-- skills ends -->
    <!-- education begins -->
    <section id="page-education" class="page-education">
        <div class="container">
            <header class="section-header">
                <h2 class="section-title"><span>Education</span></h2>
                <div class="spacer"></div>
                <p class="section-subtitle">{{user.education.subtext}}</p>
            </header>
            <div class="row">
                <div class="col-md-12" ng-repeat="education in user.education.list">
                    <article class="education">
                        <header>
                            <h3>{{education.institution}}</h3>
                            <p>{{education.course}} - <strong>Graduated:</strong> {{education.date_conclusion | date : 'MMMM/yyyy'}}</p>
                        </header>
                        <p>{{education.text}}</p>
                    </article>
                </div>
            </div>

            <div class="row">
                <div class="col-md-12">
                    <h3>Complementary courses</h3>
                    <p ng-repeat="comp in user.education.complementary">{{comp}}</p>
                </div>
            </div>
        </div>
    </section>
    <!-- education ends -->

    <!-- experience begins -->
    <section id="page-experience" class="page-experience">
        <div class="container">
            <header class="section-header">
                <h2 class="section-title"><span>Experience</span></h2>
                <div class="spacer"></div>
                <p class="section-subtitle">{{user.experience.subtext}} </p>
            </header>
            <div class="row">
                <div class="col-md-12" ng-repeat="experience in user.experience.list">
                    <article class="experience">
                        <header>
                            <h3>{{experience.institution}}</h3>
                            <p>{{experience.position}} - {{experience.date_init | date : 'MMMM/yyyy'}} - {{experience.date_conclusion ? (experience.date_conclusion | date:'MMMM/yyyy') : 'Current'}}</p>
                        </header>
                        <p>{{experience.text}}</p>
                    </article>
                </div>
            </div>
        </div>
    </section>
    <!-- experience ends -->

        <!-- portolio begins -->
    <section id="page-portfolio" class="page-portfolio">
        <div class="container">
            <header class="section-header">
                <h2 class="section-title"><span>Portfolio</span></h2>
                <div class="spacer"></div>
                <p class="section-subtitle">Coming soon!</p>
            </header>
    </section>
    <!-- portolio ends -->

    <!-- contact begins -->
    <section id="page-contact" class="page-contact">
        <div class="container">
            <header class="section-header">
                <h2 class="section-title"><span>Contact</span></h2>
                <div class="spacer"></div>
                <p class="section-subtitle">{{user.contact.subtext}}</p>
            </header>
            <div class="row">
                <div class="col-sm-5 contact-info">
                    <h3>Contact Info</h3>
                    <p><i class="fa fa-map-marker"></i> {{user.contact.address}} </p>
                    <p><i class="fa fa-phone"></i> {{user.contact.phone}}</p>
                    <p><i class="fa fa-envelope-o"></i>{{user.contact.email}}</p>
                </div>

                <div class="col-sm-7">
                    <h3>Get in Touch</h3>
                    <!-- Configure the contact form by adding your email address on mail/contact_me.php line 17 -->
                    <form name="messageForm" class="form-horizontal" ng-submit="sendMessage()" novalidate>
                        <div class="control-group">
                            <label class="control-label" for="name">Name</label>
                            <div class="controls">
                                <input type="text"  ng-model="name"  name="name" id="name" placeholder="Your name" class="form-control input-lg" required>
                                 <span ng-show="messageForm.name.$dirty && messageForm.name.$invalid">The name is required.</span>
                            </div>
                        </div>
                        <div class="control-group">
                            <label class="control-label" for="email">Email Address</label>
                            <div class="controls">
                                <input type="email"  ng-model="email"  name="email" id="email" placeholder="Your email address" class="form-control input-lg"  required>
                                <span ng-show="messageForm.email.$dirty && messageForm.email.$invalid">The email is required.</span>
                            </div>
                        </div>
                        <div class="control-group">
                            <label class="control-label" for="message">Message</label>
                            <div class="controls">
                                <textarea name="content"  ng-model="content"  id="content" rows="8" class="form-control input-lg" placeholder="Your message" required ></textarea>
                                  <span ng-show="messageForm.content.$dirty && messageForm.content.$invalid">Please say something :D.</span>
                            </div>
                        </div>
                        <div class="form-actions">
                        <div id="success"></div>
                            <button  ng-disabled="messageForm.name.$invalid || messageForm.email.$invalid || messageForm.content.$invalid " type="submit" class="btn btn-default btn-lg btn-block">Submit Message</button>
                        </div>
                    </form>
                    <!-- End contact-form -->
                </div>
            </div>
            <!-- End row -->

        </div>
    </section>


